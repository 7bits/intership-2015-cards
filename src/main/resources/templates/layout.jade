    head
        meta(charset='UTF-8')
        script(src='/resources/scripts/ajaxRequest.js')
        block head

        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel='stylesheet', type='text/css', href='/resources/stylesheets/accordion.css')
        //link(rel="stylesheet", href="stylesheets/app.css")
        link(rel='shortcut icon', href='/resources/img/logoM.png', type="image/png")

        meta(name="_csrf", content="#{_csrf.token}")
