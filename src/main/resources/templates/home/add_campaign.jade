          meta(name="_csrf_header", content="#{_csrf.headerName}")
     body
     h1 Aloha, Cards team! Do you want add new discount to database?
     h2 Add discount
     .js-add-campaign
          form#js-add-campaign-from(action="/add_campaign", method="post")
               input(type="hidden", name="#{_csrf.parameterName}", value="#{_csrf.token}")
               p
                    .infoBlock
                    label Название кампании
                    input.form-control.name_input(name="name", type="text")
                    .errors#nameError

                    label Описание кампании
                    input.form-control.description_input(name="description", type="text")
                    .errors#descriptionError

                    label Процент скидки кампании
                    input.form-control.percent_input(name="percent", type="text")
                    .errors#percentError

               .morph-in-button
                    input.add(type="submit",value="Создать")

