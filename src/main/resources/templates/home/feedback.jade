extends ../layout.jade
block append head
    title Обратная связь
block append body
    form.form(action="/feedback", method="post")
        label.form__label Заявка #{registration}
        .form__input
            label.input__label Причина обращения #{enterEmail}
            input.input__input(name="title", type="text")
            .input__error
        .form__input
            label.input__label Опиште подробнее#{enterEmail}
            textarea.input__input-textarea(name="describe")
            .input__error
        .form__input
            label.input__label Введите адрес эл. почты #{enterEmail}
            input.input__input(name="email", type="text")
            .input__error
        .form__button
            input.button__button--red.button__button-submit-js(type="submit", value="Отправить#{signup}")
