extends ../layout.jade
block append head
    title Личный кабинет
block append body
    .body--personal-area
        .body__discount
            .discount__search
                input.search__input(type='text', placeholder='Поиск...')
                img.search__icon(src='resources/img/loupe.png')
            .discount__tab-head
                input.tab-head__head.tab-head__head--1.tab-head__head--active(type="button", value="Поделиться скидкой")
                input.tab-head__head.tab-head__head--2(type="button", value="Мои скидки")
            .discount__tab-content
                .tab-content__accordion.tab-content__accordion--1.tab-content__accordion--active
                    for discount in discountsForSend
                        .accordion
                            .accordion__head
                                .accordion__head__name #{discount.storeName}
                                img.accordion__head__arrow(src="/resources/img/arrowUpWhite.png")
                            .accordion__content
                                .accordion__content__description
                                    label.description__label--bold Скидка:
                                    p.description__p #{discount.percent}%
                                    label.description__label--bold Описание:
                                    p.description__p #{discount.description}
                                img.accordion__content__image(src="/resources/img/blizzard.png")
                                .accordion__content__button
                                    input.button__button--red--small(type="button", value="Отправить")
                .tab-content__accordion.tab-content__accordion--2
                    for discount in discountsForUse
                        .accordion
                            .accordion__head
                                .accordion__head__name #{discount.storeName}
                                img.accordion__head__arrow(src="/resources/img/arrowUpWhite.png")
                            .accordion__content
                                .accordion__content__description
                                    label.description__label--bold Скидка:
                                    p.description__p #{discount.percent}%
                                    label.description__label--bold Описание:
                                    p.description__p #{discount.description}
                                img.accordion__content__image(src="/resources/img/blizzard.png")
                                .accordion__content__button
                                    input.button__button--red--small(type="button", value="Использовать")
        .body__advertising






